@inject IJSRuntime JSRuntime

<div class="fixed bottom-6 right-6 z-40">
    @if (isOpen)
    {
        <div class="bg-white rounded-lg shadow-lg p-4 mb-4 w-72">
            <div class="bg-green-500 text-white p-2 rounded-t-lg">
                <h3 class="font-bold">Chat with us</h3>
            </div>
            <div class="p-3">
                <p class="text-sm">How can we help you today?</p>
                <button @onclick="OpenWhatsApp"
                        class="mt-3 bg-green-500 text-white py-2 px-4 rounded w-full hover:bg-green-600">
                    Start Chat
                </button>
            </div>
        </div>
    }

    <button @onclick="ToggleChat"
            class="bg-green-500 hover:bg-green-600 text-white rounded-full p-3 shadow-lg flex items-center justify-center"
            aria-label="WhatsApp Chat">
        <div class="relative h-10 w-10">
            <img src="images/whatsapp-icon.png"
                 alt="WhatsApp"
                 class="object-contain w-full h-full" />
        </div>
    </button>
</div>

@code {
    private bool isOpen = false;

    private void ToggleChat()
    {
        isOpen = !isOpen;
    }

    private async Task OpenWhatsApp()
    {
        await JSRuntime.InvokeVoidAsync("open", "https://wa.me/923335912893", "_blank");
    }
}

